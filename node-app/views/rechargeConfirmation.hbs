<div class="heads" style="background: url(img/img02.jpg) center center;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2><span>//</span> Recharge Confirmation</h2>
            </div>
        </div>
    </div>
</div>

<div class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Order</li>
                </ol>
            </div>
        </div>

        <div class="row confirm">
            <div class="col-md-12 col-sm-12">
                <form class="form-horizontal col-lg-offset-4 col-lg-4" role="form" action="/subscribePlan?type={{q_type}}&plan={{q_plan}}" method="post">
                    <h3 class="text-center">Transaction Summary</h3>
                    <hr>
                    {{#if plan.deposit}}
                    {{#compare user.deposit "!=" plan.deposit}} 
                    <dl class="dl-horizontal text-center">
                        <dt class="">Deposit Amount : </dt>
                        <dd class="">&#x20b9; {{plan.deposit}}</dd>
                    </dl>      
                    <!--    <div class="row">
<div style="text-align: right;" class="col-sm-offset-4 col-md-offset-4 col-xs-offset-4 ><h5 style="font-weight: bold;">Deposit Amount :</h5></div>
<div class="col-md-6 col-sm-6 col-xs-12"><h5>&#x20b9; {{plan.deposit}}</h5></div>
</div> -->
                    {{/compare}}
                    {{/if}}

                        <dl class="dl-horizontal text-center">
                            <dt class="">{{#compare q_type "===" "member"}}Membership Amount {{else}} Recharge Amount{{/compare}} : </dt>
                            <dd class="">&#x20b9; {{plan.amount}}</dd>
                        </dl>      
                        <!-- <div style="text-align: right;" class="col-md-6 col-sm-6 col-xs-12"><h5 style="font-weight: bold;">Recharge Amount :</h5></div>
<div class="col-md-6 col-sm-6 col-xs-12"><h5>&#x20b9; {{plan.amount}}</h5></div> -->
                    <hr style="margin-top: 0px;">
                        <dl class="dl-horizontal text-center">
                            <dt class="">Total Amount : </dt>
                            <dd class="">&#x20b9; {{#if plan.deposit}}{{#compare user.deposit "!=" plan.deposit}}{{add plan.amount plan.deposit}}{{else}}{{plan.amount}}{{/compare}}{{else}}{{plan.amount}}{{/if}}</dd>
                            </dl>      
                            <!-- <div style="text-align: right;" class="col-md-6 col-sm-6 col-xs-12"><h5 style="font-weight: bold;">Recharge Amount :</h5></div>
<div class="col-md-6 col-sm-6 col-xs-12"><h5>&#x20b9; {{plan.amount}}</h5></div> -->

                        <hr style="margin-top: 0px;">
                        <div class="form-group">
                            <div class="text-center">
                                <div class="radio col-md-6 col-lg-6 col-sm-6 col-xs-12">
                                    <label class="pull-right">
                                        <input type="radio" name="paymentMethod" value="cash"  checked>

                                        &nbsp; Cash On Delivery 
                                    </label>
                                </div>
                                <div class="radio col-md-6 col-lg-6 col-sm-6 col-xs-12">
                                    <label class="pull-left">
                                        <input type="radio" name="paymentMethod"  value="paytm">
                                        &nbsp;Pay By Paytm
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">

                            <button style="" type="submit" class="btn btn-green">Pay</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
