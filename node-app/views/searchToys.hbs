        <div class="row confirm">
            <div class="col-md-2">
                <div class="row">
                <h6 style="font-weight : bold;"> Age Group </h6>
                <form id="_nav_age_group_form">
                    {{#each toysData.filters.ageGroups}}
                    <fieldset>
                        <label class="checkbox" style="font-weight : normal; margin : 5px 0px;">
                            <input type="checkbox" name="ageGroup" value="{{add @index 1}}" {{#inArray ../toysData.filters.activeAge @index}}checked{{/inArray}}><span>{{this}}</span>

                        </label>
                    </fieldset>
                    {{/each}}
                </form>
                <h6 style="font-weight : bold;"> Categories </h6>
                <form id="_nav_category_form">
                    {{#each toysData.filters.categories}}
                    <fieldset>
                        <label class="checkbox" style="font-weight : normal; margin : 5px 0px;">
                            <input type="checkbox" name="category" value="{{add @index 1}}" {{#inArray ../toysData.filters.activeCategories @index}}checked{{/inArray}}><span>{{this}}</span>
                        </label>
                    </fieldset>
                {{/each}}
                </form>
                </div>
