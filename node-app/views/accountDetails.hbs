<!-- begin:contact -->
<div class="page-content contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li class="active">Contact Us</li>
                </ol>
            </div>
        </div>

        <div class="row confirm">
            <div id="_nav_account_details_alert" class="alert" style="padding: 7px; font-size: 11px; margin-bottom: 0px;" role="alert">
            </div>
            <br>
            <div class="panel-group" id="_nav_account_accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-green">
                    <div class="panel-heading" role="tab" id="headingOne" data-toggle="collapse" data-parent="#_nav_account_accordion" href="#_nav_collapse_account_details" aria-expanded="true" aria-controls="_nav_collapse_account_details">
                        <h4 class="panel-title">
                            Account Details
                        </h4>
                    </div>
                    <div id="_nav_collapse_account_details" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <form id="_nav_account_details_form" action="/user/accountDetails" method="POST">
                            <div class="panel-body">
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">First Name</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="First Name" name="firstName" value="{{user.first_name}}" length="10" required>
                                    </div>
                                    <label class="col-sm-2 control-label">Last Name</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="Last Name" name="lastName" value="{{user.last_name}}" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Email address</label>
                                    <div class="col-sm-4">
                                        <input type="email" class="form-control" placeholder="Email address : " value="{{user.email_address}}" readonly required>
                                    </div>
                                    <label class="col-sm-2 control-label">Phone number</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="Phone number : " name="contactNo" value="{{user.mobile_no}}" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-md-2 control-label">Permanent Address</label>
                                    <div class="col-sm-4 col-md-4">
                                        <textarea class="form-control" rows="4" name="shippingAddress" placeholder="Shipping Address : " required>{{user.shippingAddress}}</textarea>
                                    </div>
                                    <label class="col-md-2 col-sm-2 control-label">Pin Code</label>
                                    <div class="col-md-4 col-sm-4">
                                        <input class="form-control" type="text" name="pinCode" placeholder="Pin Code :" required value="{{user.pinCode}}">

                                    </div>

                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-2 control-label">Password : </label>
                                    <div class="col-sm-4">
                                        <input type="password" class="form-control" placeholder="" value="Your Password" readonly required>
                                    </div>
                                    <div class="col-sm-2 col-xs-12"> 
                                        <button type="button" class="btn btn-green" id="_nav_change_password">Change</button>
                                    </div>
                                </div>
                                <div class="row form-group hidden">

                                    <label class="col-sm-2 control-label">New Password : </label>
                                    <div class="col-sm-3">
                                        <input style="background-image: url(&quot;data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=&quot;);" class="form-control" placeholder="" type="password" name="newPassword" disabled required>
                                    </div>
                                    <label class="col-sm-2 control-label">Confirm Password : </label>
                                    <div class="col-sm-3">
                                        <input style="background-image: url(&quot;data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=&quot;);" class="form-control" placeholder="" type="password" name="newPasswordConf" disabled required>
                                    </div>
                                    <div class="col-sm-1 col-xs-12"> 
                                        <button type="button" class="btn btn-green" id="_nav_change_pass_reset">Reset</button>
                                    </div>
                                </div>                                                                                                                                                                                                                                                                                                                                                                                        
                            </div>
                            <div class="panel-footer">
                                <button type="submit" class="btn btn-green pull-right">Save</button>
                                <div class="clearfix"></div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel panel-green">
                    <div class="panel-heading" role="tab" id="headingTwo" data-toggle="collapse" data-parent="#_nav_account_accordion" href="#_nav_collapse_child_details" aria-expanded="true" aria-controls="_nav_collpase_child_details">
                        <h4 class="panel-title">
                            Children Details
                        </h4>
                    </div>
                    <div id="_nav_collapse_child_details" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="panel-body">
                                {{#each children}}
                                {{#compare (length ../children) "!==" 1}}
                                <h3>Child {{add @index 1}} </h3>
                                {{/compare}}
                                <form class="nav-child-detail">
                                    <input type="hidden" name="childId" value="{{_id}}">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" >Gender</label>
                                        <div class="col-sm-4">
                                            <select class="form-control" placeholder="" name="gender">
                                                <option value="" {{#compare gender "==" null}}selected{{/compare}} disabled> Select Gender Of Child</option>
                                                <option {{#compare gender "==" 1}}selected{{/compare}}value="1" >Male</option>
                                                <option {{#compare gender "==" 2}}selected{{/compare}} value="2">Female</option>

                                            </select>
                                        </div>
                                        <label class="col-sm-2 control-label">Age Group</label>
                                        <div class="col-sm-4">
                                            <select name="ageGroup" class="form-control">
                                                <option value="" disabled> Select Age Group</option>
                                                {{#each ../ageGroups}}
                                                <option value="{{@index}}" {{#compare @index "==" ../age_group}}selected{{/compare}}>{{this}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-2 control-label">Hobbies</label>
                                        <div class="col-md-4 col-sm-4">
                                            <input type="text" class="form-control" placeholder="Commma seperated list of hobbies of your child" name="hobbies" value="{{hobbies}}">
                                        </div>

                                    </div>
                                </form>
                                {{/each}}
                            </div>
                        <form id="_nav_child_details_form" action="/user/childDetails" method="POST">
                            <div class="panel-footer">
                                <button id="_nav_child_details_button" type="submit" class="btn btn-green pull-right">Save</button>
                                <div class="clearfix"></div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
