
<div class="heads" style="background: url(/img/img02.jpg) center center;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2><span>//</span> Recharge Confirmation</h2>
            </div>
        </div>
    </div>
</div>

<div class="page-content">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Order</li>
                </ol>
            </div>
        </div>

        <div class="row confirm">
            <div class="col-md-12">
                <h3 class="">Order Summary</h3>
            </div>
        </div>
        <hr>



        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ordered Date</th>
                            <th>Delivery Date</th>
                            <th>Return Date</th>
                            <th>Toy Name</th>
                            <th>Amount Deducted</th>
                            <th>Order Status</th>
                            <th>Cancel</th>
                        </tr>
                    </thead>
                    {{#each orders}}
                    <tr>
                        <form action="/toys/cancelOrder?orderId={{this._id}}" method="POST">
                        </form>
                            <td>{{orderedDate}}</td>
                            <td>{{deliveryDate}}</td>
                            <td>{{returnedDate}}</td>
                            <td>{{toyName}}</td>
                            <td>{{toyPrice}}</td>
                            <td><span class="label label-{{#getClass transactionStatus}}{{/getClass}}">{{transactionStatus}}</span></td>
                            <td>
                                <button type="submit" class="btn btn-green btn-cancel-order" {{#compare status "!=" "PLACED"}}disabled{{/compare}}>Cancel</button>
                            </td>
                    </tr>
                    {{/each}}
                </table>
                </div>
            </div>
        </div>

        <hr>


    </div>
</div>
