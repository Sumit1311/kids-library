                                <div class="col-sm-8 col-md-12">
                                    <input class="form-control" placeholder="Name : " value="Sumit" required="" readonly="" type="text">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-12 col-sm-4 control-label" style="text-align: left;">Email address</label>
                                <div class="col-sm-8 col-md-12">
                                    <input class="form-control" placeholder="Email address : " value="{{user.email_address}}" required="" readonly="" type="email">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-12 col-sm-4 control-label" style="text-align: left;">Phone number</label>
                                <div class="col-md-12 col-sm-8">
                                    <input class="form-control" placeholder="Phone number : " value="{{user.mobile_no}}" required="" readonly="" type="text">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-12 col-sm-4 control-label" style="text-align: left;">Shipping Address</label>
                                <div class="col-md-12 col-sm-8">
                                    <textarea class="form-control" rows="8" name="shippingAddress" placeholder="Shipping Address : " value="" required="">{{user.address}}</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 col-sm-4 control-label" style="text-align: left;">Pin Code</label>
                                <div class="col-md-12 col-sm-8">
                                    <input class="form-control" placeholder="Pin Code " value="{{user.pin_code}}" required="" type="text">
                                </div>
                            </div>

